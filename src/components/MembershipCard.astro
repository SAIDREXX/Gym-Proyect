---
interface Props {
  class?: string;
  price: string;
}

const { price } = Astro.props;
---

<article
  class={`
    ${Astro.props.class}
    container
    relative rounded-xl
    overflow-hidden
    group 
`}
>
  <div class="card absolute w-full h-full">
    <div class="front absolute w-full h-full">
      <slot name="image" />
      <div
        class="flex flex-row select-none gap-3 p-6 text-lg z-20 h-full items-center justify-center bg-[#2C2E33]"
      >
      </div>
    </div>

    <div
      class="backw absolute flex flex-col items-center justify-between p-6 w-full h-full"
    >
      <slot name="content" />
      <a
        class="bg-red-700 text-xl font-semibold text-white p-2 px-6 rounded-full"
        href="#"
      >
        <h2>{price}</h2>
      </a>
    </div>
  </div>
</article>

<style>
  .card {
    transform-style: preserve-3d;
    transition: all 0.5s ease;
  }

  .card:hover {
    transform: rotateY(180deg);
  }

  .front {
    backface-visibility: hidden;
    color: #333;
  }

  .backw {
    backface-visibility: hidden;
    background: linear-gradient(to left, #ece9e6, #d8d8d8);
    color: #333;
    transform: rotateY(180deg);
  }
</style>
